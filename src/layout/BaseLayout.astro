---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import { ButtonFloatingWhatsapp,ButtonFloatingContact } from "../components";
interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  googleTag?: boolean;
}

const {
  title = "Estudio Contable - Contador",
  description = "La contabilidad es nuestra pasión. Vivimos para servir. Fortalecemos tu proyectos y emprendimientos brindándote excelente asesoría administrativa y contable con mas de 20 años de experiencia.",
} = Astro.props;
---

<html lang="en">
  <head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
          new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-MJ928BF5');</script>
    <!-- End Google Tag Manager -->

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-16632800466"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'AW-16632800466');
    </script>

    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>


  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MJ928BF5"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div class="general-wrapper">
      <Header />
      <div class="main">
        <ButtonFloatingContact/>
        <slot />
      </div>
      <ButtonFloatingWhatsapp />
      <Footer />
    </div>
    <style is:global lang="scss">
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Noto Sans Georgian Variable", sans-serif;
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        font-size: 16px;
      }

      .general-wrapper {
        max-width: 1530px;
        margin: auto;
        position: relative;
        background-color: var(--color-tertiary);
      }

      .main {
        width: 100%;
        height: auto;
        position:relative;
      }
    </style>
  </body>
</html>
