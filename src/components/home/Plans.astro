---
import Icon from "astro-icon";

import plans from "../../data-list/plans.json";
---

<section id="plans" class="py-10">
  <h2 class="w-max rounded-full px-4 py-2 bg-[#f9f9f9] font-semibold mb-4">
    (⚡) Planes
  </h2>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
    {
      plans.map(({ title, description, image }) => (
        <article class="flex flex-col gap-4 rounded-xl overflow-hidden shadow">
          <img
            loading="lazy"
            src={image}
            alt={`Imagen de ${title}`}
            class="w-full h-80 object-cover"
          />
          <div class="h-72 flex flex-col gap-4 p-4">
            <div class="flex flex-col items-center gap-4">
              <h3 class="text-sm rounded-full bg-secondary text-white px-4 py-2">
                {title}
              </h3>
              <p>{description}</p>
            </div>
            <a
              href="/#contact"
              class="flex justify-center items-center gap-4 mt-auto rounded-full bg-accent text-white p-2"
            >
              <span>Quiero cotización</span>
              <Icon name="arrow-top-right" size={15} />
            </a>
          </div>
        </article>
      ))
    }
  </div>
</section>
