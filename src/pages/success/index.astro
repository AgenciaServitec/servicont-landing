---
import { BaseLayout } from "../../layout";
---
<BaseLayout title="Mensaje exitoso">
    <main>
        <section class="success">
            <div class="success__img">
                <img loading="lazy" src="/images/success.webp" alt="Exitoso" />
            </div>
            <div class="success__text">
                <h2 class="success__text-title">Mensaje enviado exitosamente</h2>
                <p class="success__text-description">Nos comunicaremos en breve</p>
            </div>
        </section>
        <div class="success-btn">
            <a href="/">Regresar a inicio</a>
        </div>
    </main>
</BaseLayout>

<style lang="scss">
  main {
    width: 100%;
    padding: 6em 2em 2em 2em;
    @media (max-width: 576px) {
      padding: 3em 1.5em;
    }
  }
  .success {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4em;
    padding: 1em 7em;
    @media (max-width: 1200px) {
        flex-direction: column;
        gap: 1em;
      padding: 0 2em;
    }
    &__img {
      max-width: 430px;
      height: auto;
      img {
        width: 100%;
        height: 100%;
        border-radius: 15px;
      }
    }
    &__text {
      width: 35%;
      &-title {
        font-size: 2.7em;
        text-transform: uppercase;
        font-style: italic;
        color: #0d77c1;
        margin-bottom: 0.625em;
        @media (max-width: 576px) {
          font-size: 1.5em;
        }
      }
      &-description {
        font-size: 2em;

          @media (max-width: 576px) {
              padding-bottom: 1em;
              font-size: 1.5em;
          }
      }
      @media (max-width: 1024px) {

        width: 100%;

      }
    }
  }
  .success-btn {
    width: 100%;
      padding-top: 1em;
    display: flex;
    justify-content: center;
    a {
      margin: 0 auto;
      font-size: 1.2em;
      text-transform: upperCase;
      text-decoration: auto;
      font-style: italic;
      background-color: #0d77c1;
      color: #fff;
      padding: 1em;
      border-radius: 7em;
      border: none;
      cursor: pointer;
    }
  }
</style>