<style lang="scss">
  //MOBILE AND TABLET
  .header-general {
    width: 100%;
    height: auto;
    background: white;
    display: flex;
    justify-content: space-between;

    .header-wrapper {
      width: 100%;
    }

    .menu-bar {
      padding: 0 0.3em;
      display: flex;
      justify-content: space-between;
      align-items: center;

      .img-logo {
        img {
          max-width: 200px;
          max-height: 90px;
          object-fit: contain;
        }
      }

      .item-menu-button {
        background: #fff;
        color: #000;
      }
    }
    .top-header {
      background: #0d77c1;
      padding: 0.5em;
      ul {
        display: flex;
        justify-content: space-between;
        > li {
          list-style: none;
          span,
          a {
            font-size: 0.7em;
            text-decoration: none;
            display: flex;
            align-items: center;
            color: white;
            gap: 0.5em;
          }
        }
      }

      .anchor-icon {
        .icon {
          color: var(--color-primary);
        }
      }
    }

    .item-menu {
      display: none;
    }
  }

  //DESKTOP
  @media (min-width: 920px) {
    .header-general {
      position: relative;
      background: white;
      top: 0;
      z-index: 700;
      width: 100%;
      max-width: 1530px;
      margin: auto;
      .item-menu-button {
        display: none;
      }

      .top-header {
        background: #0d77c1;
        padding: 0.7em;
        ul {
          justify-content: space-evenly;

          > li {
            span,
            a {
              display: flex;
              align-items: center;
              font-size: 1em;
              color: white;
              gap: 0.5em;
            }
          }
        }
      }

      .menu-bar {
        padding: 0.5em 0;
        width: 100%;
        display: flex;
        background: #fff;
        justify-content: space-between;
        .img-logo {
          img {
            width: 12em;
            height: auto;
            object-fit: contain;
            margin: 0.5em 2em;
          }
        }

        .item-menu {
          display: flex;
          gap: 2em;
          font-size: 1.2em;
          font-weight: 500;

          ul {
            list-style: none;
            padding: 0;
            display: flex;
            align-items: center;
            gap: 1m;

            > li {
              padding: 0 1em;
            }

            li a {
              text-decoration: none;
              color: #0d77c1;
            }
          }
        }
      }
    }
  }
</style>
