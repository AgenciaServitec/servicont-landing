                <!--    pack="ic"-->
                <!--    name="baseline-tiktok"-->
                <!--    size={20}-->
                <!--  /></a-->
                <!--&gt;-->
                <a
                        aria-label="Click para ir a Whatsapp"
                        href="https://api.whatsapp.com/send/?phone=51935273393&text=Hola%2C%20vengo%20de%20mifanllantas.com%20%C2%BFPodr%C3%ADan%20brindarme%20m%C3%A1s%20informaci%C3%B3n%20sobre%20sus%20llantas%3F"
                        target="_blank"
                ><span>Whatsapp</span>
                    <Icon pack="mdi" name="whatsapp" size={20} /></a
                >
            </div>
        </div>
        <div class="footer-top__sections">
            <h3>Paginas</h3>
            <ul>
                <li><a href={isHomePage ? "#" : "/#"} rel="inicio">Inicio</a></li>
                <li>
                    <a href={isHomePage ? "#services" : "/#services"} rel="servicios">Servicios</a>
                </li>
                <li><a href={isHomePage ? "#about-us" : "/#about-us"}  rel="nosotros">Nosotros</a></li>
                <li><a href={isHomePage ? "#plans" : "/#plans"} rel="planes">Planes</a></li>
